<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/two"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.austin.hackhealth.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/two"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Steps"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/stepCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Points"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/achievement1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/one"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/resized002" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="280dp"
                    android:layout_height="36dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Own Two Feet"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Amount" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/achievement2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/one"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/resized010" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Bread Crumbs"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Amount" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/achievement3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/one"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/resized004" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Mad Hops"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Amount" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
